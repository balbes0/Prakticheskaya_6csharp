<UserControl x:Class="Prakticheskaya_6.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prakticheskaya_6"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid Background="White" Margin="10" MaxHeight="100" MaxWidth="100" MinHeight="100" MinWidth="100">
        <Button>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="70*"/>
                </Grid.RowDefinitions>
                <Label x:Name="dayLabel" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10" FontWeight="Bold" Content="{Binding DayInLabel}"></Label>
                <Image Grid.Row="1" Source="\Images\8bde06daf2250f38d8c1625e4cb133a9.jpg"/>
            </Grid>
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Показать число" Click="MenuItem_Click"/>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
    </Grid>
</UserControl>
